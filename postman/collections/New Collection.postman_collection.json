        },
        {
          "listen": "test",
          "script": {
            "id": "acf5ccc1-edd6-49ba-a0ee-fc251310d636",
            "exec": [
              "// Проверка статуса\r",
              "pm.test(\"Status is 200\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "const responseJson = pm.response.json();\r",
              "const inputAlias = pm.iterationData.get(\"alias\");\r",
              "const inputUrl = pm.iterationData.get(\"url\");\r",
              "\r",
              "let actualAlias;\r",
              "\r",
              "if (inputAlias) {\r",
              "    pm.test(\"Alias matches input\", function () {\r",
              "        pm.expect(responseJson.alias).to.eql(inputAlias);\r",
              "    });\r",
              "\r",
              "    actualAlias = inputAlias;\r",
              "\r",
              "} else {\r",
              "    pm.test(\"Alias is generated\", function () {\r",
              "        pm.expect(responseJson.alias).to.not.be.empty;\r",
              "    });\r",
              "\r",
              "    actualAlias = responseJson.alias;\r",
              "}\r",
              "\r",
              "// Сохраняем для следующего запроса\r",
              "pm.environment.set(\"redirectAlias\", actualAlias);\r",
              "pm.environment.set(\"originalUrl\", inputUrl);\r",
              "\r",
              "// Запускаем redirect-запрос\r",
              "pm.execution.setNextRequest(\"Redirect\");"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
